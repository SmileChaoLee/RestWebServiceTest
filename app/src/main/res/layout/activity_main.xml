<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff00ff00"
        android:textColor="#ff000000"
        android:text="REST Web Service"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36dp"
        android:textStyle="bold|italic"/>

    <!--
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/smile"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"/>
    -->

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Smile Information Inc."
        android:textColor="#ff0000ff"
        android:textSize="30dp"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/webSiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:background="#ffd3d3d3"
        android:layout_below="@+id/companyName"
        android:layout_alignLeft="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/userNameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="User name:"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:background="#ffd3d3d3"
        android:layout_below="@+id/webSiteText"
        android:layout_alignLeft="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff00"
        android:background="#ff000000"
        android:layout_below="@+id/webSiteText"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/userNameHint"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/passwordHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Password:"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:background="#ffd3d3d3"
        android:layout_below="@+id/userNameHint"
        android:layout_alignLeft="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffffff00"
        android:background="#ff000000"
        android:inputType="textPassword"
        android:layout_below="@+id/userNameHint"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/passwordHint"
        android:layout_marginLeft="5dp"
        android:layout_alignRight="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:text="Login (AsyncTask)"
        android:layout_below="@+id/passwordText"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName" />


    <TextView
        android:id="@+id/titleForJSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="JSON String"
        android:textStyle="bold"
        android:textColor="#ffff0000"
        android:layout_below="@+id/loginButton"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/jsonString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#ffffff00"
        android:background="#ff000000"
        android:layout_below="@+id/titleForJSON"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#ffffff00"
        android:background="#ff000000"
        android:layout_below="@+id/jsonString"
        android:layout_alignLeft="@+id/companyName"
        android:layout_alignRight="@+id/companyName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
